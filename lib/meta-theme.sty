% Options Start
\newtoggle{bool-bg}
\newtoggle{bool-footer-scroll}
\DeclareOptionX{bg}[full]{
	\XKV@cc*+[\val\index]{#1}{full,none,print}{%
		\ifcase\index\relax
		% full
		\toggletrue{bool-bg}
		\toggletrue{bool-footer-scroll}
		\or
		% none
		\togglefalse{bool-bg}
		\togglefalse{bool-footer-scroll}
		\or
		% print
		\togglefalse{bool-bg}
		\toggletrue{bool-footer-scroll}
		\fi
		} 
		{ 
			\PackageWarning{meta}{\Val\ is not a valid choice for bg annd was ignored}
	}


}


\newtoggle{justified}
\DeclareOptionX{justified}{\toggletrue{justified}}





